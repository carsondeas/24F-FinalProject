import streamlit as st
import altair as alt
import pandas as pd

# Set the page configuration
st.set_page_config(
    page_title="Company Profiles",
    page_icon="üè¢",
    layout="wide",
)

# Add navigation buttons
col1, col2, col3 = st.columns([1, 6, 1])
with col1:
    if st.button("‚Üê Back"):
        st.write("Navigating back...")
        st.experimental_rerun()  # Replace with navigation logic
with col2:
    st.text_input("Search")  # Placeholder for search functionality
with col3:
    if st.button("üè† Home"):
        st.write("Navigating to Home...")  # Replace with navigation logic

st.title("Company Profiles")

# Input fields for company details
st.text_input("Name")
st.selectbox("Role/Department", ["Engineering", "HR", "Finance", "Other"])
st.selectbox("Location", ["New York", "San Francisco", "Remote", "Other"])
st.multiselect("Skills/Proficiency", ["Python", "SQL", "Leadership", "Cloud Computing"])

if st.button("View Full Profile"):
    st.write("Displaying full company profile...")  # Replace with actual logic

# Skill Trends
st.subheader("Skill Trends")
# Placeholder for skill trends data
skill_data = pd.DataFrame({
    "Skill": ["Skill 1", "Skill 2", "Skill 3", "Skill 4", "Skill 5", "Skill 6", "Skill 7"],
    "Proficiency": [10, 15, 20, 25, 30, 35, 40]
})

# Display skill trends as a pie chart
pie_chart = alt.Chart(skill_data).mark_arc().encode(
    theta=alt.Theta("Proficiency", type="quantitative"),
    color=alt.Color("Skill", type="nominal"),
    tooltip=["Skill", "Proficiency"]
).properties(
    title="Skill Trends"
)
st.altair_chart(pie_chart, use_container_width=True)

# Emerging Skills
st.subheader("Emerging Skills")
st.markdown("""
- **Skill 1**: Description of skill 1
- **Skill 2**: Description of skill 2
- **Skill 3**: Description of skill 3
""")
